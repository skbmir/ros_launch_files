<launch>
    <arg name="camera" default="D415"/>
    <group ns="$(arg camera)">
        <include file="$(find realsense2_camera)/launch/includes/nodelet.launch.xml">
            <arg name="color_width"               value="1280"/>
            <arg name="color_height"              value="720"/>
            <arg name="color_fps"                 value="30"/>
            <arg name="enable_color"              value="false"/>
            
            <arg name="depth_width"               value="1280"/>
            <arg name="depth_height"              value="720"/>
            <arg name="depth_fps"                 value="30"/>
            <arg name="enable_depth"              value="true"/>
            
            <arg name="enable_pointcloud"         value="true"/>
            <arg name="pointcloud_texture_stream" value="RS2_STREAM_ANY"/>
            <arg name="pointcloud_texture_index"  value="0"/>
            <arg name="enable_sync"               value="false"/>
            <arg name="align_depth"               value="false"/>
            
            <arg name="infra_width"               value="1280"/>
            <arg name="infra_height"              value="720"/>
            <arg name="infra_fps"                 value="30"/>
            <arg name="enable_infra1"             value="false"/>
            <arg name="enable_infra2"             value="false"/>
            
            <arg name="tf_prefix"                 value="$(arg camera)"/>
            <arg name="serial_no"                 value=""/>
            <arg name="json_file_path"            value=""/>
            
            <arg name="clip_distance"             value="-2"/>
            <arg name="filters"                   value=""/>
            
            <arg name="enable_gyro"               value="false"/>
            <arg name="enable_accel"              value="false"/>
            <arg name="enable_fisheye1"           value="false"/>
            <arg name="enable_fisheye2"           value="false"/>
        </include>
        <node pkg="nodelet" type="nodelet" name="$(arg camera)_downsample" args="load pcl/VoxelGrid realsense2_camera_manager">
            <param name="leaf_size" value="0.1"/>
            <param name="filter_field_name" value="xyz"/>
            <param name="filter_limit_min" value="0.0"/>
            <param name="filter_limit_max" value="1.0"/>
            <param name="filter_limit_negative" value="false"/>
            <param name="input_frame" value=""/>
            <param name="output_frame" value=""/>
            <remap from="input" to="/$(arg camera)/depth/color/points/"/>
        </node>
        
    </group>
</launch>